@model Guild.Models.Order
@using Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="w3-padding  w3-container w3-white w3-margin w3-round" style="overflow:visible; margin-bottom:50px!important;">
    <div class="w3-card-2 w3-blue w3-round w3-display-container w3-show-inline-block" style="width:50px; height:50px; margin-top:-25px; text-align:center">
        <img class="w3-display-middle" src="~/img/shopping-bag.png" />
    </div>
    <h4 class="w3-show-inline-block" style="position:relative; top:-12px; padding-left:5px;">@Model.ProductId</h4>
    <p>@Model.Text1</p>
    <p>@Model.Text2</p>
    <p>@Model.AdditionalText1</p>
    <p>@Model.AdditionalText2</p>
</div>

