@using Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/w3.css" />
    <link rel="stylesheet" href="~/css/guild.css" />
</head>
<body>
    <nav class="w3-bar w3-black">
        <a href='@Url.Action("Index", "Admin", null)' class="w3-button w3-bar-item">Guild</a>
        <a href='@Url.Action("CreateUser", "Admin", null)' class="w3-bar-item w3-button">Добавить пользователя</a>
        <a href='@Url.Action("Users", "Admin", null)' class="w3-bar-item w3-button">Список пользователей</a>
    </nav>
    @RenderBody()
</body>
</html>
