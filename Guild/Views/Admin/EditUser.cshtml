@using Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Guild.ViewModels.EditUserViewModel
@{
    ViewData["Title"] = "Редактирование пользователя";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="w3-padding  w3-container w3-white w3-margin w3-round" style="overflow:visible; margin-bottom:50px!important;">
    <a asp-action="EditUserPassword" asp-controller="Admin" asp-route-userId="@Model.UserId" class="w3-button w3-right w3-blue">Изменить пароль</a>
    <div class="w3-card-2 w3-blue w3-round w3-display-container w3-show-inline-block" style="width:50px; height:50px; margin-top:-25px; text-align:center"><img src="~/img/user.png" class="w3-display-middle" /></div>
    <h4 class="w3-show-inline-block" style="position:relative; top:-12px; padding-left:5px;">Редактирование пользователя</h4>
    <form method="post" asp-controller="Admin" asp-action="EditUser" asp-route-userId="@Model.UserId" class="form w3-margin">
        <div asp-validation-summary="All"></div>
        <div class="input-container">
            <input asp-for="UserName" class="w3-input input-field" placeholder=" " />
            <label asp-for="UserName"></label>
            <span asp-validation-for="UserName"></span>
        </div>
        <div class="input-container">
            <input asp-for="FirstName" class="w3-input input-field" placeholder=" " />
            <label asp-for="FirstName"></label>
            <span asp-validation-for="FirstName"></span>
        </div>
        <div class="input-container">
            <input asp-for="MiddleName" class="w3-input input-field" placeholder=" " />
            <label asp-for="MiddleName"></label>
            <span asp-validation-for="MiddleName"></span>
        </div>
        <div class="input-container">
            <input asp-for="LastName" class="w3-input input-field" placeholder=" " />
            <label asp-for="LastName"></label>
            <span asp-validation-for="LastName"></span>
        </div>
        <div class="input-container">
            <select asp-for="GuildId" asp-items="Model.Guilds" class="w3-input input-field"></select>
            <span asp-validation-for="Guilds"></span>
        </div>
        <div class="input-container">
            <span>Является администратором <input asp-for="IsAdmin" class="" /></span>
        </div>


        <input type="submit" class="w3-button w3-right w3-green w3-text-white" value="Сохранить изменения" />
    </form>
</div>